                "query": "query ListUsers($first: Int!, $page: Int!) {\n  users(first: $first, page: $page) {\n    data {\n      id\n      name\n      email\n      phone\n      status\n    }\n    paginatorInfo {\n      total\n      perPage\n      currentPage\n      lastPage\n      hasMorePages\n    }\n  }\n}",
                "variables": "{\"first\": 10, \"page\": 1}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
