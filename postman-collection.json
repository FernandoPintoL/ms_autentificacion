            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query ValidateToken($token: String!) {\n  validateToken(token: $token) {\n    valid\n    message\n    user {\n      id\n      email\n    }\n    permissions {\n      name\n    }\n  }\n}",
                "variables": "{\"token\": \"{{token}}\"}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
