  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation Login($email: String!, $password: String!) {\n  login(email: $email, password: $password) {\n    success\n    message\n    token\n    tokenType\n    expiresAt\n    user {\n      id\n      name\n      email\n      roles {\n        name\n      }\n    }\n    permissions {\n      name\n    }\n  }\n}",
                "variables": "{\"email\": \"paramedic@ambulancia.local\", \"password\": \"paramedic@123456\"}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Login WhatsApp",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation LoginWhatsApp($phone: String!) {\n  loginWhatsApp(phone: $phone) {\n    success\n    message\n    token\n    tokenType\n    user {\n      id\n      phone\n      status\n    }\n  }\n}",
                "variables": "{\"phone\": \"612345678\"}"
              }
            },
            "url": {
              "raw": "{{base_url}}/graphql",
              "host": ["{{base_url}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
